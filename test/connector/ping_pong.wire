#ifndef CONNECTOR_PING_PONG_WIRE_
#define CONNECTOR_PING_PONG_WIRE_

#include <wire/sugar.wire>

namespace test {

[[cpp_cmp, cpp_io]]
struct data {
    string  str;
};

exception oops {
    string message;
};

interface callback {
    void
    event();
};

class ball {
    int64 size;
};

class named_ball : ball {
    string name;
};

interface ping_pong {
    [[sync]]
    int32
    test_int(int32 val) const;

    string
    test_string(string val);

    data
    test_struct(data val) const;

    callback*
    test_callback(callback* cb);

    ball
    test_ball(ball b);

    [[sync]]
    void
    error() throw (oops);

    void
    async_error() const throw (oops);

    void
    stop();
};

}  /* namespace test */


#endif /* CONNECTOR_PING_PONG_WIRE_ */
